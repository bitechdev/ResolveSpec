# ResolveSpec Configuration Example
# This file demonstrates all available configuration options
# Copy this file to config.yaml and customize as needed

server:
  addr: ":8080"
  shutdown_timeout: 30s
  drain_timeout: 25s
  read_timeout: 10s
  write_timeout: 10s
  idle_timeout: 120s

tracing:
  enabled: false
  service_name: "resolvespec"
  service_version: "1.0.0"
  endpoint: "http://localhost:4318/v1/traces"  # OTLP endpoint

cache:
  provider: "memory"  # Options: memory, redis, memcache

  redis:
    host: "localhost"
    port: 6379
    password: ""
    db: 0

  memcache:
    servers:
      - "localhost:11211"
    max_idle_conns: 10
    timeout: 100ms

logger:
  dev: false
  path: ""  # Empty for stdout, or specify file path

middleware:
  rate_limit_rps: 100.0
  rate_limit_burst: 200
  max_request_size: 10485760  # 10MB in bytes

cors:
  allowed_origins:
    - "*"
  allowed_methods:
    - "GET"
    - "POST"
    - "PUT"
    - "DELETE"
    - "OPTIONS"
  allowed_headers:
    - "*"
  max_age: 3600

database:
  url: "host=localhost user=postgres password=postgres dbname=resolvespec_test port=5434 sslmode=disable"
